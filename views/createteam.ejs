<% include topnav %>
<div style="margin-left:20%; width:60%">
	<form>
	  <div class="form-group row">
	    <label for="inputEmail3" class="col-sm-2 form-control-label">Team Name</label>
	    <div class="col-sm-10">
	      <input type="email" class="form-control" id="inputTeamName" placeholder="Please insert team name.">
	    </div>
	  </div>
      <div class="form-group row">
	    <label for="inputEmail3" class="col-sm-2 form-control-label">Team Owner</label>
	    <div class="col-sm-10">
	      Bonnie Tu
	    </div>
	  </div>
      <div class="form-group row">
	    <label for="inputEmail3" class="col-sm-2 form-control-label">Team Members</label>
	    <div class="col-sm-8" id="mutipleEmail">
	      <input type="email" class="form-control" id="inputTeamMember1" placeholder="Email">
	    </div>
        <div class="col-sm-2">
			<button type="button" class="btn btn-secondary" id="addMore" onclick="add_fields();">Add More</button>
			<button type="button" class="btn btn-secondary" id="remove" onclick="remove_fields();">Remove</button>
        </div>
	  </div>
	</form>
</div>
<script>
var emailNumber = 1;
$("#remove").hide();
function add_fields() {
var d = document.getElementById("mutipleEmail");
emailNumber += 1;
d.innerHTML += "<input type=\"email\" class=\"form-control\" id=\"inputTeamMember" + emailNumber + "\" placeholder=\"Email\">";
$("#remove").show();
}

function remove_fields() {
var d = document.getElementById("mutipleEmail");
if (emailNumber > 1){
    emailNumber -= 1;
    d.innerHTML = ""
    for (var i = 1; i <= emailNumber; i++) {
        d.innerHTML += "<input type=\"email\" class=\"form-control\" id=\"inputTeamMember" + i + "\" placeholder=\"Email\">";
    }
    if(emailNumber == 1) {
        $("#remove").hide();
    }
}
}
</script>
