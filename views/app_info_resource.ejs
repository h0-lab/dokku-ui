<div style="margin-top: 50px;margin-left:20%; width:60%">
    <% if (db.length > 0){ %>
    <table class="table table-striped">
        <thead>
          <tr>
            <th>Database Name</th>
            <th>Type</th>
            <th>Created Date</th>
          </tr>
        </thead>
        <tbody>
            <% for(var i=0;i<db.length;i++){ %>
            <tr>
              <td><%= db[i].name %></td>
              <td><%= db[i].type %></td>
              <td><%= db[i].createdAt %></td>
            </tr>
            <% } %>
        </tbody>
    </table>
    <% } %>
  <h4 style="margin-top: 50px">Add New Database</h4>
  <form method="post">
    <div class="form-group row">
      <label for="inputAppName" class="col-sm-4 form-control-label">Database Name</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="inputAppName" name="name">
      </div>
    </div>
    <div class="form-group row">
      <label for="selectdb" class="col-sm-4 form-control-label">Database Selection</label>
    <div class="col-xs-8">
      <select class="selectpicker form-control" name="type">
        <option value="maria">MariaDB</option>
        <option value = "postgres">PostgreSQL</option>
        <option value = "mongo">MongoDB</option>
        <option value = "redis">Redis</option>
      </select>
    </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2">
        <button type="submit" class="btn btn-secondary">Create</button>
      </div>
      <div class="col-sm-2">
        <button type="reset" class="btn btn-secondary">Reset</button>
      </div>
    </div>
  </form>
</div>
